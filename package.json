        "axios": "^0.19.0",
        "form-data": "^3.0.0"
    },
    "devDependencies": {
        "@types/jest": "^24.0.23",
        "@types/node": "^12.12.14",
        "@zeit/ncc": "^0.20.5",
        "jest": "^24.9.0",
        "jest-circus": "^24.9.0",
        "prettier": "1.18.2",
        "ts-jest": "^24.2.0",
        "typescript": "^3.7.2",
